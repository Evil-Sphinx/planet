{
  // 是否在保存时格式化文件, 是，保证 prettier 起作用
  "editor.formatOnSave": true,
  // 开启自动修复
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },
  // 开启 stylelint 校验
  "stylelint.enable": true,
  // eslint 校验的语言列表
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "vue",
      // 额外配置自动修复
      "autoFix": true
    },
    {
      "language": "typescript",
      // 额外配置自动修复
      "autoFix": true
    },
    {
      "language": "typescriptreact",
      // 额外配置自动修复
      "autoFix": true
    }
  ]
}
